<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/GridLayout1"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:columnCount="8"
android:rowCount="3"
android:orientation="horizontal"
tools:context="com.threbrooks.bluetoothkeyboard.FullscreenActivity"
    android:background="#000000">
    <!-- Row 1 -->
    <Button android:id="@+id/bArrowUp" android:text="#" android:layout_column="1" android:layout_row="0"/>
    <Button android:id="@+id/bX" android:text="X"  android:layout_column="6" android:layout_row="0"/>

    <Button android:id="@+id/bArrowLeft" android:text="#" android:layout_column="0" android:layout_row="1"/>
    <Button android:id="@+id/bArrowRight" android:text="#" android:layout_column="2" android:layout_row="1"/>
    <Button android:id="@+id/bY" android:text="Y"  android:layout_column="5" android:layout_row="1"/>
    <Button android:id="@+id/bA" android:text="A"  android:layout_column="7" android:layout_row="1"/>

    <Button android:id="@+id/bArrowDown" android:text="#"  android:layout_column="1" android:layout_row="2"/>
    <Button android:id="@+id/bB" android:text="B"   android:layout_column="6" android:layout_row="2"/>
</GridLayout>
